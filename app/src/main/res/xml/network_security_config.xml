<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
        Cleartext (HTTP) is permitted because many Parseable instances are
        self-hosted on private networks without TLS.  The login screen shows
        a security warning when the user enables the "Allow insecure" toggle
        for non-localhost servers.
    -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
